@model IEnumerable<Employees.TO.Employee>
@using Employees.Resources

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees</h2>

<form>
    <div class="form-group row">
        <label for="txtEmployeeId" class="col-sm-2 col-form-label">@Messages.Label_EmployeeId</label>
        <div class="col-sm-8">
            <input type="number" id="txtEmployeeId" class="form-control" />
        </div>
        <div class="col-sm-2">
            <input type="button" id="btnGetEmployees" class="btn btn-primary" value="Get Employees" />
        </div>
    </div>
</form>


<table class="table table-striped table-bordered" id="tblEmployees">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlySalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlySalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnualSalary)
            </th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>


@section scripts {
    @Scripts.Render("~/bundles/employees")
}

